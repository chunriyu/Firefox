page {
  padding: 20rpx;
  background-color: #fff;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row .searchInput {
  flex: 1;
  height: 100%;
  border-radius: 20rpx;
  background-color: #e6e6e6;
  display: flex;
}
.search_row .searchInput .close {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
}
.search_row .searchInput input {
  flex: 6;
  height: 100%;
  font-size: 28rpx;
  padding: 0 20rpx;
}
.search_row .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: normal;
  margin-left: 20rpx;
  width: 110rpx;
  color: var(--themeColor);
  height: 100%;
  font-size: 28rpx;
  padding: 0;
}
.search_content .search_item {
  background-color: #fff;
  font-size: 28rpx;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #e7e6e6;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
